      "noImplicitAny": true,
      "removeComments": true,
      "outDir": "./dist",
      "sourceMap": true,
      "target": "es5",
      "allowJs": true,
      "checkJs": false,
      "jsx": "react",
  },
  "include": [
      "lib/**/*",
      "test/**/*",
  ],
